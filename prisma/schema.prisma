generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @map("_id")
  email    String @unique
  password String
  todos    Todo[]
}

model Todo {
  id        Int     @id @map("_id")
  title     String
  content   String
  completed Boolean @default(false)
  userId    String
  user      User    @relation(fields: [userId], references: [id])
}
